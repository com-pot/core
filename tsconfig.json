{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2015",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "modules/demo/src/types/*"
            ]
        }
    },
    "include": [
        "modules/core/**/*"
    ]
}
